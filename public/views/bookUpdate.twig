{% extends 'layout.twig' %}

{% block body %}
  <h2 class="page-header">{{title}}</h2>
  {% if errors %}
      {% for error in errors %}
        <div class="alert alert-danger">{{ error.msg }}</div>
      {% endfor %}
  
  {% endif %}

  {% if bookObject %}

      <form method="post" action='/bookUpdate?Id={{bookObject._id }}' >
      <div class="form-group">
          <label for="bookName">Book Name</label>
          <input type="text" name="bookName" id="bookName" value ="{{bookObject.local.bookName }}" class="form-control" placeholder="Book Name">
      </div>  
      <!--<div class="form-group">
          <label for="bookId">Book Id</label>
          <input type="text" name="bookId" id="bookId" class="form-control" placeholder="Insert Id">
      </div> -->
      <!--<div class="form-group">
          <label for="imageUrl">Image Url</label>
          <input type="text" name="imageUrl" id="imageUrl" class="form-control" placeholder="Insert Url">
      </div> -->
      <div class="form-group">
          <label for="bookDescription">Book Description</label>
          <input type="text" name="bookDescription" id="bookDescription" value="{{bookObject.local.bookDescription }}" class="form-control" placeholder="BookDescription">
      </div>
      <!-- <div class="form-group">s
          <label for="addedBy">Added By</label>
          <input type="text" name="addedBy" id="addedBy" class="form-control" placeholder="addedBy">
      </div> -->
      <div class="form-group">
          <label for="author">Author</label>
          <input type="text" name="author" id="author" value="{{bookObject.local.author}}" class="form-control" placeholder="Insert Author">
      </div>
      <div class="form-group">
          <label for="yearOfPublication">Year Of Publication</label>
          <input type="text" name="yearOfPublication" id="yearOfPublication" value={{bookObject.local.yearOfPublication}} class="form-control" placeholder="Insert Publication Year">
      </div>
      <div class="form-group">
          <label for="copies">Copies</label>
          <input type="text" name="copies" id="copies" value={{bookObject.local.copies}} class="form-control"  placeholder="Insert Copies of books available">
      </div>
      
      <button type="submit" class="btn btn-default">Save</button>
  </form>
  
  {% endif %}
  
{% endblock %}
